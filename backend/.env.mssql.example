# MS SQL Server Configuration (For Windows Production Deployment)

# Database Type
DB_TYPE=mssql

# MS SQL Server Connection Settings
DB_HOST=localhost
DB_PORT=1433
DB_NAME=iAlign
DB_USER=sa
DB_PASSWORD=YourStrongPassword123!

# Security Settings
# Set to true if using Azure SQL Database
DB_ENCRYPT=false
# Set to true for local SQL Server (development)
DB_TRUST_CERT=true

# Application Settings
NODE_ENV=production
PORT=5000

# JWT Secret (MUST change this in production!)
JWT_SECRET=your-super-secret-production-key-change-this
JWT_EXPIRES_IN=24h

# CORS Settings (update with your frontend URL)
CORS_ORIGIN=http://localhost:3000

# Connection Pool Settings (optional - uses defaults if not set)
# DB_POOL_MAX=10
# DB_POOL_MIN=0
# DB_POOL_ACQUIRE=30000
# DB_POOL_IDLE=10000
