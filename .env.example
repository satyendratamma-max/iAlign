# Backend Environment Variables
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=1433
DB_NAME=iAlign
DB_USER=sa
DB_PASSWORD=iAlign@2024!
DB_DIALECT=mssql
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# Active Directory (Optional)
AD_ENABLED=false
AD_URL=ldap://your-ad-server
AD_BASE_DN=DC=company,DC=com
AD_USERNAME=ad_user
AD_PASSWORD=ad_password

# CORS Configuration
# For local development: http://localhost:3000
# For network access: http://your-hostname:3000 (e.g., http://SurfacePro:3000)
# Multiple origins: http://localhost:3000,http://SurfacePro:3000
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-password

# Redis (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AI/ML Service (Optional)
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=

# Frontend Environment Variables
# For local development: http://localhost:5000/api/v1
# For network access: http://your-hostname:5000/api/v1 (e.g., http://SurfacePro:5000/api/v1)
REACT_APP_API_URL=http://localhost:5000/api/v1
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0
REACT_APP_ENABLE_MOCK_DATA=false
